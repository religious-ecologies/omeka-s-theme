<div id="are-filters">
  <div id="filter-query" class="empty">
    <h4>Selected filters</h4>
    <ul class="selected-filters">
    </ul>
  </div>
  <?php 
    $resourceTemplates = $this->api()->search('resource_templates')->getContent();
    array_shift($resourceTemplates);
    $resourceTemplateIds = [];
    foreach($resourceTemplates as $resourceTemplate) {
      $resourceTemplateIds[$resourceTemplate->label()] = $resourceTemplate->id();
    }
    echo $this->partial('common/are-filter-select', [
        'heading' => 'Resource type',
        'filterResourceType' => 'resource_templates',
        'filterResources' => $resourceTemplates,
        'filterKey' => 'resource_template_id[]',
    ]); 

