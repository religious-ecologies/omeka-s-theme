    $denominationFamilyPropertyId = $denominationProperty{0}->id();
    echo $this->partial('common/are-filter-select', [
        'heading' => 'Denomination family',
        'filterResourceType' => 'items',
        'filterResources' => $denominationFamiles,
        'filterKey' => 'property[INDEX][joiner]=or&property[INDEX][property]=' . $denominationFamilyPropertyId . '&property[INDEX][type]=res&property[INDEX][text]'
    ]);


    $stateTerritories = $this->api()->search('items', ['resource_template_id' => $resourceTemplateIds['State/Territory']])->getContent();
    $stateTerritoriesProperty = $this->api()->search('properties', ['term' => 'mare:stateTerritory', 'limit' => 1])->getContent();
    $stateTerritoriesPropertyId = $stateTerritoriesProperty{0}->id();
    echo $this->partial('common/are-filter-select', [
        'heading' => 'State/Territory',
        'filterResourceType' => 'items',
        'filterResources' => $stateTerritories,
        'filterKey' => 'property[INDEX][joiner]=or&property[INDEX][property]=' . $stateTerritoriesPropertyId . '&property[INDEX][type]=res&property[INDEX][text]'
    ]);
  ?>
  <a href="<?php echo $this->url(null, ['action' => 'browse'], true); ?>" type="button" class="filter-submit button">Apply filters</></a>

